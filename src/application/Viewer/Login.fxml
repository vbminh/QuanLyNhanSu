<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="500.0" maxWidth="500.0" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller.LoginController">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="150.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/logo.jpg" />
         </image>
      </ImageView>
      
      <Label id="SchoolName" layoutX="90.0" layoutY="180.0" text="Trường Đại học Công nghiệp Hà Nội" />
      
      <Label id="AppName" layoutX="135.0" layoutY="230.0" text="QUẢN LÝ NHÂN SỰ" />
      
      <TextField fx:id="username" focusTraversable="false" layoutX="135.0" layoutY="290.0" prefHeight="40.0" prefWidth="230.0" promptText="Tên đăng nhập" />
      
      <PasswordField fx:id="password" focusTraversable="false" layoutX="135.0" layoutY="350.0" prefHeight="40.0" prefWidth="230.0" promptText="Mật khẩu" />
      
      <Button id="Login" layoutX="200.0" layoutY="420.0" mnemonicParsing="false" text="Đăng nhập" onAction="#login"/>
   
   </children>
</AnchorPane>
